---
import Base from '../layouts/Base.astro';
const offres = await allMaisonsFavoris ()

---
<Base titre="Accueil">
    <h1 class="text-4xl font-bold text-center text-blue-600 p-4">Accueil</h1>
    <div class="container mx-auto px-4 text-center">
        <h2 class="text-2xl font-bold text-black-600 mb-4">
            Offres Favorites
        </h2>
        <p class="text-lg text-gray-700 mb-6">
            Découvrez nos offres immobilières les plus appréciées.
        </p>
        <div class="flex flex-wrap justify-center mt-4">
            {offresFavorites.length > 0 ? (
                offresFavorites.map((offre) => (
                    <Card {...offre} />
                ))
            ) : (
                <p class="text-lg text-gray-500">Aucune offre favorite pour le moment.</p>
            )}
        </div>
    </div>
</Base>


