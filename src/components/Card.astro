---
export interface Props {
    nomMaison: string;
    imgUrl: string;
    id: string;
}

const { nomMaison, imgUrl, id } = Astro.props;
---

<div class="border rounded-lg shadow-md m-4 max-w-sm">
    <img src={imgUrl} alt={`Image de ${nomMaison}`} class="w-full h-48 object-cover rounded-t-lg">
    <div class="p-4 bg-white">
        <h2 class="text-2xl font-bold text-center">{nomMaison}</h2>
        <a href={`/offres/${id}`}>Voir plus</a> 
    </div>
</div>

