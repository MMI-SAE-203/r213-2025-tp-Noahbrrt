---

export interface Props {
    nomMaison: string;
    adresse: string;
    prix: number;
    surface: number;
    nbChambres: number;
    nbSdb: number;
    favori: boolean;
    imgUrl: string;
}

const { nomMaison, adresse, prix, surface, nbChambres, nbSdb, favori, imgUrl } = Astro.props;
---

<div class="border rounded-lg shadow-md p-4 m-4 max-w-sm">
    <div class="p-4">
        <h2 class="text-2xl font-bold mb-2">{nomMaison}</h2>
        <p class="text-gray-700"><strong>Adresse:</strong> {adresse}</p>
        <p class="text-gray-700"><strong>Prix:</strong> {prix} €/mois</p>
        <p class="text-gray-700"><strong>Surface:</strong> {surface} m²</p>
        <p class="text-gray-700"><strong>Chambres:</strong> {nbChambres}</p>
        <p class="text-gray-700"><strong>Salles de bain:</strong> {nbSdb}</p>
    </div>
</div>
